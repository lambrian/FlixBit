{
    "manifest_version": 2,

        "name": "FlixBit",
        "description": "Track Netflix consumption",
        "version": "1.0",


        "browser_action": {
            "default_icon": "icon.svg",
            "default_popup": "popup.html"
        },

        "content_scripts": [
        {
            "matches": ["http://www.netflix.com/*"],
            "js": ["jquery.min.js", "tracker.js"]
        }
    ],

        "background": {
            "scripts": ["background.js"]
        },

        "permissions": [
            "*://netflix.com/*", "tabs", "webNavigation", 
        "http://*/*", "https://*/*", "storage"
            ]
}
